                       <a href="#"><i class="fa fa-heart"></i></a>
                     </div>
                     -->
                   </div>
                 </div>

                 <!-- related posts -->

                 <!-- Comments -->

                  <!--  end comments -->

               </div>
             </div>
           </div>
         </article> <!-- end large post -->
       </div> <!-- end col -->

       {% include 'partials/sidebar.html.twig' %}
     </div> <!-- end row -->
   </div> <!-- end container -->
  </section> <!-- end content -->
{% endblock %}
